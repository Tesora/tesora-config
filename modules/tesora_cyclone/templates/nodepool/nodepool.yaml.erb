script-dir: /etc/nodepool/scripts
elements-dir: /etc/nodepool/elements
images-dir: /opt/nodepool_dib
dburi: 'mysql+pymysql://nodepool:<%= mysql_password %>@localhost/nodepool'

cron:
  cleanup: '*/1 * * * *'
  check: '*/1 * * * *'
  # DISABLE image-update. (Feb 31 does not exist.)
  image-update: '0 5 31 2 *'

zmq-publishers:
  - tcp://jenkins01.elasticdb.org:8888

gearman-servers:
  - host: zuul.elasticdb.org

labels:
  - name: devstack-trusty
    image: devstack-trusty
    ready-script: configure_mirror.sh
    min-ready: 1
    providers:
      - name: bluebox
  - name: bare-trusty
    image: bare-trusty
    ready-script: configure_mirror.sh
    min-ready: 1
    providers:
      - name: bluebox
  - name: bare-precise
    image: bare-precise
    ready-script: configure_mirror.sh
    min-ready: 1
    providers:
      - name: bluebox
  - name: bare-centos6
    image: bare-centos6
    ready-script: configure_mirror.sh
    min-ready: 1
    providers:
      - name: bluebox

providers:
  - name: bluebox
    cloud: bluebox
    region-name: ''
    service-type: 'compute'
    service-name: 'nova'
    boot-timeout: 180
    max-servers: 13
    rate: 0.5
    pool: 'external'
    networks:
      - net-label: 'internal'
    images:
      - name: devstack-trusty
        base-image: 'ubuntu-14.04.2'
        min-ram: 8192
        name-filter: 'dsvm-minimal'
        setup: prepare_node_devstack.sh
        username: jenkins
        private-key: /home/nodepool/.ssh/id_rsa
      - name: bare-trusty
        base-image: 'ubuntu-14.04.2'
        min-ram: 8192
        name-filter: 'nodepool-standard'
        setup: prepare_node_bare.sh
        username: jenkins
        private-key: /home/nodepool/.ssh/id_rsa
      - name: bare-precise
        base-image: 'ubuntu-12.04.5-20150204release'
        min-ram: 8192
        name-filter: 'nodepool-standard'
        setup: prepare_node_bare.sh
        username: jenkins
        private-key: /home/nodepool/.ssh/id_rsa
      - name: bare-centos6
        base-image: 'centos-6.5-20141129'
        min-ram: 8192
        name-filter: 'nodepool-standard'
        setup: prepare_node_bare.sh
        username: jenkins
        private-key: /home/nodepool/.ssh/id_rsa

targets:
  - name: jenkins01
    jenkins:
      url: 'https://jenkins01.elasticdb.org/'
      user: '<%= jenkins_api_user %>'
      apikey: '<%= jenkins_api_key %>'
      credentials-id: '<%= jenkins_credentials_id %>'

diskimages:
  - name: devstack-trusty-dib
    elements:
      - ubuntu
      - vm
      - openstack-repos
      - puppet
      - nodepool-base
      - node-devstack
    release: trusty
